def calculator(a,b):
  print("Choose operation from list:")
  print("1=And")
  print("2=Or")
  print("3=Xor")
  print("4=Complementary")
  print("5=Left Shift")
  print("6=Right Shift")
  operation=int(input("Enter choice:"))

  if operation=1:
    return a & b
  elif operation=2:
    return a | b
  elif operation=3:
    return a ^ b;
  elif operation=4:
    return ~a;
  elif operation=5:
    return a << 2;
  elif operation=6:
    return a >> 2;
  else:
    return "invalid"

choose=input("Press B for binary input and D for decimal input:")
if choose=="D":
  DecimalToBinary(num):
        if num > 1:
            DecimalToBinary(num // 2)
            return num % 2
  num1=int(input("Enter number in decimal:"))
  num2=int(input("Enter number in decimal:"))
  bn1=DecimalToBinary(num1)
  bn2=DecimalToBinary(num2)
  print(calculator(bn1,bn2))
elif choose=="B":
  bn1=int(input("Enter number in binary:"))
  bn2=int(input("Enter number in binary:"))
  print(calculator(bn1,bn2))
else:
  print("Invalid input")
